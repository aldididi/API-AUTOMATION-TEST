{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "User List Schema",
  "type": "object",
  "required": ["data", "total", "page", "limit"],
  "properties": {
    "data": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/user"
      }
    },
    "total": { "type": "integer" },
    "page": { "type": "integer" },
    "limit": { "type": "integer" }
  },
  "definitions": {
    "user": {
      "type": "object",
      "required": [
        "id", "title", "firstName", "lastName", "picture",
        "gender", "email", "dateOfBirth", "phone",
        "location", "registerDate", "updatedDate"
      ],
      "properties": {
        "id": { "type": "string" },
        "title": { "type": "string" },
        "firstName": { "type": "string" },
        "lastName": { "type": "string" },
        "picture": { "type": "string", "format": "uri" },
        "gender": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "dateOfBirth": { "type": "string", "format": "date-time" },
        "phone": { "type": "string" },
        "location": {
          "type": "object",
          "required": ["street", "city", "state", "country", "timezone"],
          "properties": {
            "street": { "type": "string" },
            "city": { "type": "string" },
            "state": { "type": "string" },
            "country": { "type": "string" },
            "timezone": { "type": "string" }
          }
        },
        "registerDate": { "type": "string", "format": "date-time" },
        "updatedDate": { "type": "string", "format": "date-time" }
      }
    }
  },
  "additionalProperties": false
}
